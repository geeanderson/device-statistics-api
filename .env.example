# .env.example
# Template for environment variables used by the application.
# Copy this file to .env and fill in the values for your local environment.


# ---------------------------------------------------------------------------
# PostgreSQL — shared by both APIs
# ---------------------------------------------------------------------------

DB_HOST=postgres           # Docker Compose service name — do not change
DB_PORT=5432               # Default PostgreSQL port
DB_NAME=devicedb           # Name of the database
DB_USER=postgres           # Database user
DB_PASSWORD=postgres       # Change this to anything you like

# ---------------------------------------------------------------------------
# Internal service URL
# ---------------------------------------------------------------------------

# Docker Compose containers talk to each other by service name, not localhost.
DEVICE_API_URL=http://device-registration-api:8001
