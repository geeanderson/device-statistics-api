# .env.example
# Template for environment variables used by the application.
# Copy this file to .env and fill in the values for your local environment.


# PostgreSQL — shared by both APIs
DB_HOST=localhost          # Hostname of the PostgreSQL server (use "postgres" in Docker Compose)
DB_PORT=5432               # Default PostgreSQL port
DB_NAME=devicedb           # Name of the database
DB_USER=postgres           # Database user
DB_PASSWORD=postgres       # Database password — use a strong value in production

# Service URLs — used by Statistics API to call Device Registration API
# Use "http://device-registration-api:8001" in Docker Compose
# Use the K8s Service name in Kubernetes
DEVICE_API_URL=http://localhost:8001   # Internal URL of the Device Registration API


# API Ports
# STATISTICS_API_PORT=8000
# DEVICE_API_PORT=8001